#!/bin/bash

# Fungsi konversi byte
function con() {
    local -i bytes=$1
    if [[ $bytes -lt 1024 ]]; then
        echo "${bytes}B"
    elif [[ $bytes -lt 1048576 ]]; then
        echo "$(( (bytes + 1023)/1024 ))KB"
    elif [[ $bytes -lt 1073741824 ]]; then
        echo "$(( (bytes + 1048575)/1048576 ))MB"
    else
        echo "$(( (bytes + 1073741823)/1073741824 ))GB"
    fi
}

# Header output
echo "==================================="
echo "      TROJAN USER LOGIN"
echo "==================================="

# Inisialisasi
echo -n > /tmp/other.txt
data=( $(grep -E "^#tr |^#trg " /etc/xray/config.json | cut -d ' ' -f 2 | sort | uniq) )

for akun in "${data[@]}"; do
    [[ -z "$akun" ]] && continue

    echo -n > /tmp/iptrojan.txt
    data2=( $(tail -n 500 /var/log/xray/access.log | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | sort | uniq) )

    for ip in "${data2[@]}"; do
        jum=$(grep -w "$akun" /var/log/xray/access.log | tail -n 500 | cut -d " " -f 3 | sed 's/tcp://g' | cut -d ":" -f 1 | grep -w "$ip" | sort | uniq)
        if [[ "$jum" == "$ip" ]]; then
            echo "$jum" >> /tmp/iptrojan.txt
        else
            echo "$ip" >> /tmp/other.txt
        fi
        jum2=$(cat /tmp/iptrojan.txt)
        sed -i "/$jum2/d" /tmp/other.txt > /dev/null 2>&1
    done

    jum=$(cat /tmp/iptrojan.txt)
    if [[ -n "$jum" ]]; then
        akun_file="/etc/julak/limit/trojan/ip/${akun}"
        limit_file="/etc/limit/trojan/${akun}"
        quota_file="/etc/trojan/${akun}"

        # Data IP limit
        if [[ -f "$akun_file" ]]; then
            iplimit=$(grep ^login_ip "$akun_file" | cut -d= -f2)
        else
            iplimit="?"
        fi

        # Data limit & usage
        if [[ -f "$limit_file" ]]; then
            wey=$(cat "$limit_file")
            gb=$(con "$wey")
        else
            gb="0B"
        fi

        if [[ -f "$quota_file" ]]; then
            byte=$(cat "$quota_file")
            lim=$(con "$byte")
        else
            lim="0B"
        fi

        lastlogin=$(grep -w "$akun" /var/log/xray/access.log | tail -n 500 | cut -d " " -f 2 | tail -1)
        jum2=$(wc -l < /tmp/iptrojan.txt)

        # Tampilkan info akun
        echo "-----------------------------------"
        echo "UserName :" "$akun"
        echo "Login    :" "$lastlogin"
        echo "Usage Quota :" "$gb"
        echo "Limit Quota :" "$lim"
        echo "Limit IP :" "$iplimit"
        echo "Login IP :" "$jum2"
        echo "-----------------------------------"
    fi

    rm -f /tmp/iptrojan.txt
done

rm -f /tmp/other.txt